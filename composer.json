{
    "name": "artisangora/php-project-lvl2",
    "license": "GPL-3.0-only",
    "type": "project",
    "description": "Hexlet project #2",
    "require": {
        "php": "^7.4|^8.0",
        "docopt/docopt": "^1.0",
        "ext-json": "*",
        "funct/funct": "^1.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.5"
    },
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/DiffGenerator.php",
            "src/Render.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "linter": "phpcs -- --standard=PSR12 src bin"
    }
}
