{
    "name": "hexlet/code",
    "require": {
        "docopt/docopt": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.5"
    },
    "bin": [
        "gendiff"
    ],
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/DiffGenerator.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "linter": "phpcs -- --standard=PSR12 src bin"
    }
}
